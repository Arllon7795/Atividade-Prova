## ======= QUEST√ÉO 3 =======

DELIMITER $$
CREATE PROCEDURE contador_repeat(limite TINYINT UNSIGNED)

BEGIN
  DECLARE cont INT;
  DECLARE result VARCHAR(50);
    SET cont = 1 ;
        SET result = '';
      
      REPEAT
            SET result = CONCAT(result, cont, ', ');
            SET cont = cont + 1;
            UNTIL cont = 10
            END REPEAT;
            
     SELECT result;
END$$
DELIMITER ;

DROP PROCEDURE contador_repeat

CALL contador_repeat(1);
